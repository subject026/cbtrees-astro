---
import CheckSVG from "./svg/Check.astro";

const services = [
  {
    text: "Tree Felling and Dismantling",
  },
  {
    text: "Awkward and Dangerous Tree Removals",
  },
  {
    text: "Tree Pruning",
  },
  {
    text: "Hedge Trimming",
  },
  {
    text: "Stump Removal",
  },
  {
    text: "Chipping Services",
  },
];
---

<section class="bg-darkgray py-16 lg:py-22 grow">
  <div class="page-wrap prose pb-16 lg:pb-22 md:ml-4 lg:ml-8">
    <p>
      Fully qualified and insured tree surgeons with over 15 years experience.
    </p>
    <p>
      We're based in Cardiff and undertake all aspects of tree and hedge work
      including awkward and dangerous tree removals.
    </p>
  </div>
  <div class="page-wrap grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      services.map((service) => (
        <div class="flex">
          <div
            class="
              w-12
              md:w-16
              flex-none fill-current text-gray-300
            "
          >
            <CheckSVG />
          </div>

          <h3
            class="
              flex-grow
              pl-4
              text-2xl
              font-medium
              break-normal
              mt-2
              md:mt-4
            "
          >
            {service.text}
          </h3>
        </div>
      ))
    }
  </div>
</section>
