---
import { Picture } from "@astrojs/image/components";
import heroImage from "../images/chainsaw_hero_bg.jpg";
---

<section class="w-full">
  <div class="py-12 md:py-32 bg-darkgray bg-opacity-80 relative">
    <Picture
      class="absolute top-0 bottom-0 left-0 right-0 -z-10 [&>img]:object-cover [&>img]:w-full [&>img]:h-full"
      src={heroImage}
      alt="close up of chainsaw cutting through a log"
      loading="eager"
      widths={[400, 600, 800, 1000, 1200, 1400, 1800, 2000]}
      sizes="(max-width: 400px) 400px, (max-width: 600px) 600px, (max-width: 800px) 800px, (max-width: 1000px) 1000px, (max-width: 1200px) 1200px, (max-width: 1400px) 1400px, (max-width: 1800px) 1800px, 2000px"
    />

    <div class="page-wrap">
      <h1
        class="text-3xl lg:text-4xl leading-tight lg:leading-snug font-bold text-gray-200 mb-8 md:max-w-[80%] tracking-wide"
      >
        Professional Tree Surgeons Covering Cardiff and the Surrounding Area
      </h1>
    </div>
  </div>

  <div class="bg-darkergray">
    <div class="page-wrap py-6">
      <h2 class="text-xl lg:text-2xl text-gray-300 font-bold tracking-wide">
        All aspects of tree and hedge work undertaken
      </h2>
    </div>
  </div>
</section>
